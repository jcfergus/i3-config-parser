{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck":true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "es2016", "dom" ],
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "types": [
      "jest",
      "node"
    ],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
