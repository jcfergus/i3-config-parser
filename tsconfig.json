{
  "compilerOptions": {
    "typeRoots": ["@types", "./node_modules/@types"],
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck":true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "es2016", "dom" ],
    "allowJs": true,
    "sourceMap": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "spec.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "test/**/*"
  ]
}
